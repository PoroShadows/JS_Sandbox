transition(args...) {
  -webkit-transition: args
  -moz-transition: args
  -ms-transition: args
  -o-transition: args
  transition: args
}
*
  box-sizing border-box
html
body
  margin 0
  padding 0
  border 0
  height 100%
  width 100%
  overflow hidden
body
  font 12px/14px 'Comfortaa', Meiryo, sans-serif
  color #522b16
img.cover
  display inline
  position fixed
  top 50%
  left 50%
  min-width 100%
  max-width 200%
  min-height 100%
  max-height 200%
  transform translate(-50%, -50%)
  z-index -1000
a.top
  display inline-flex
  top 0
  left 0
  background rgba(255,255,255,.6)
  color #522b16
  text-decoration none
a.top:link
  text-decoration none
a.top > p
  margin 0
  padding 8px
a.top > .artist_name
  background rgba(255,255,255,.6)
img.artist-logo
  display block
  margin 23px 0 63px 40px
nav > ul.links
  margin 0
  padding 0
  list-style none
nav > ul.links > li
  margin 3px 0
nav > ul.links > li > a
  contain layout style
  display inline-block
  font-size 14px
  color #fff
  padding 4px 10px 3px 50px
  background rgba(136, 151, 88, 0.4)
  transform translateX(-20px)
  text-decoration none
  transition: transform .4s ease
nav > ul.links > li > a.active
  background rgba(66, 32, 0, 0.8)
nav > ul.links > li > a:hover
  transform none

for x in news-info live-event
  h2.{x}
    font 15.6px 'Comfortaa', Meiryo, sans-serif
    margin 0
    margin-top 23px
    padding-left 30px
  ul.{x}
    list-style none
    margin inherit 0 0 0
    padding 0
  for i in 1..3
    ul.{x} > li.item-{i}
      display inline-flex
      align-items center
      background rgba(255, 255, 255, 1 - (0.2 * i))
      padding 3px 2px 3px 30px
      margin-bottom 3px
      max-width 500px
      width auto
      transition color .5s ease-in, background-color .5s ease-in
      margin-right 1000px
    ul.{x} > li.item-{i} > a
    ul.{x} > li.item-{i} > a:link
      color #000
      text-decoration none
      transition color .1s ease-in
    ul.{x} > li.item-{i}:hover > a
      color #fff
    ul.{x} > li.item-{i}:hover
      color #fff
      background-color #8f3a4a
    ul.{x} > li.item-{i} > span
      margin-right 10px









